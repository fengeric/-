<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:overScrollMode="ifContentScrolls" >

        <Button
            android:id="@+id/opMember"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/opMember" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="4dip" >

            <Button
                android:id="@+id/opItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opItem" />

            <Button
                android:id="@+id/opOrder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opOrder" />

            <Button
                android:id="@+id/opCart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opCart" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="4dip" >

            <Button
                android:id="@+id/opIMUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opIMUI" />

            <Button
                android:id="@+id/opPic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opPic" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="4dip" >

            <Button
                android:id="@+id/opOpenAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opOpenAccount" />

            <Button
                android:id="@+id/opOpenTrade"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/opOpenTrade" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip" />

        <Button
            android:id="@+id/opMa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/opMa" />

        <Button
            android:id="@+id/open_web_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/open_web_view" />

        <Button
            android:id="@+id/showPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="showPage"
            android:text="@string/showPage" />

        <RadioGroup
            android:id="@+id/type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/taobao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:checked="true"
                android:text="淘宝" >
            </RadioButton>

            <RadioButton
                android:id="@+id/tmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:layout_weight="1"
                android:text="天猫" >
            </RadioButton>
        </RadioGroup>

        <Button
            android:id="@+id/openAMap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/openAMap" />
         <Button
            android:id="@+id/openShare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="一键分享" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/envIndex"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="envIndex"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/opRestartApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/opRestartApp" />
        </LinearLayout>

        <EditText
            android:id="@+id/showPageUrl"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="showPageUrl" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/up"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="name,pwd"
                android:inputType="text" >
            </EditText>

            <Button
                android:id="@+id/opLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/opLogin"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>